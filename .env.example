# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/career_compass

# Google Gemini API
GOOGLE_API_KEY=your_gemini_api_key_here

# JWT Authentication (REQUIRED for production - use a secure random key)
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET=CHANGE_ME_IN_PRODUCTION_USE_SECURE_RANDOM_KEY
JWT_EXPIRATION_HOURS=24
JWT_REFRESH_EXPIRATION_DAYS=7

# CORS Allowed Origins (comma-separated)
ALLOWED_ORIGINS=https://yourapp.com,http://localhost:8080

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# File Upload Limits
MAX_UPLOAD_SIZE_MB=5

# Debug Mode (set to false in production)
DEBUG=false
